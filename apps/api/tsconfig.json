{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@sales-machine/shared/*": ["../../packages/shared/src/*"],
      "@sales-machine/shared": ["../../packages/shared/src/index.ts"]
    },
    "composite": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}
